@model IEnumerable<MVCExample.Models.Staff>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<table class="table table-hover" id="table-refresh">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.maNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.diaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chucVu)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody id="tableViewAll">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.maNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sdt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.diaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.chucVu)
                </td>
                <td class="d-flex" style="justify-content: space-around;">
                    @* <a asp-action="Edit" asp-route-id="@item.maNhanVien" class="btn btn-warning">
                        Edit
                    </a> *@
                    <a onclick="showPopUp('@Url.Action("Edit","Staff",new {id = item.maNhanVien })','Sửa nhân viên')"
                        class="btn btn-warning"><i class="far fa-edit"></i> Sửa</a>
                    @* form xoa *@

                    <form onclick="return jQueryDelete(this)" asp-action="Delete" method="post"
                    asp-route-id="@item.maNhanVien">
                        <button id="DeletePopup" type="button" class="btn btn-danger "><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">

</script>
@* form for delete *@
<div class="modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Xóa nhân viên</h2>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa không?</p>
            </div>
            <div class="modal-footer">
                <button type="submit" id="submitDeleteForm" class="btn btn-success" data-dismiss="modal">Xóa</button>
                <button type="button" id="cancel-delete-button" class="btn btn-secondary"
                    data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@* form  *@
<div class="modal" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" text-center></h2>
            </div>
            <div class="modal-body">
                
            </div>
        </div>
    </div>
</div>