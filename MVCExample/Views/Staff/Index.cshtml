@{
}
@{
    ViewData["Title"] = "Index";
}

<div id="table-NhanVien">
    <h2 id="title-NhanVien">QUẢN LÝ NHÂN VIÊN</h2>
    <div id="addSearch">
        <div id="addNhanVien"><a href="/Staff/Create">Thêm mới</a></div>
        <div id="search">
            <p>Tìm kiếm</p>
            <input type="text" name="search" value="" placeholder="Từ khóa tìm kiếm..." />
        </div>
    </div>
    <table>
        <tr>
            <th>Mã NV</th>
            <th>Họ và tên</th>
            <th>Ngày sinh</th>
            <th>SĐT</th>
            <th>Chức vụ</th>
            <th>Thao tác</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="15%">@item.maNhanVien</td>
                <td width="25%">@item.hoTen</td>
                <td>@item.ngaySinh</td>
                <td>@item.sdt</td>
                <td>@item.chucVu</td>
                <td width="15%"><a href="">Sửa - Xóa</a></td>
            </tr>
        }

     


    </table>