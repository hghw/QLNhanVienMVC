        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maNhanVien)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.hoTen)
        </dt>
        <dd class="col-sm-10">
